

<h1>Friends</h1>
<table class="table table-striped table-bordered table-hover">
	<thead class="thead-dark">
		<tr>
			<th>Name</th>
			<th>Email</th>
			<th>Phone</th>
			<th>Twitter</th>
			<th>ID</th>
		</tr>
	</thead>
	<tbody>
		<% @friends.each do |friend| %>
		<tr>
			<td>
				<%= friend.first_name%> <%= friend.last_name%>
				<%#= link_to friend.first_name + ' ' + friend.last_name, friend %>


			</td>

			<td><%= friend.email %></td>
			<td><%= friend.phone %></td>
			<td><%= friend.twitter %></td>
			<td><%= friend.user_id %></td>          



			<% if friend.user_id == current_user.id %>

			<td><%= link_to 'Show', friend, class: "btn btn-outline-danger btn-sm" %></td>
			<td><%= link_to 'Edit', edit_friend_path(friend), class: "btn btn-outline-danger btn-sm" %></td>
			<td><%= link_to 'Delete', friend, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm" %></td>

			<%else%> 
				<td></td>
				<td></td>
				<td></td>
			<% end %>

		</tr>
		<% end %>
	</tbody>
</table>

<br>

<%= link_to "New friend", new_friend_path , class:"btn btn-secondary" %>
